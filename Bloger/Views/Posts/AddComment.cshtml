@model Bloger.Models.ComentsViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="col-md-12">
    <form asp-action="AddComment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>

            <input asp-for="PostsID" type="hidden" value="@Model.PostsID" />
            <input asp-for="UserName" type="hidden" value="@Model.UserName" />
            <input asp-for="AspNetUsersId" type="hidden" value="@Model.AspNetUsersId" />
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
